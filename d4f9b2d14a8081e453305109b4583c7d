<!-- js -->
<script>

function Xhr() { // http://fr.wikipedia.org/wiki/XMLHttpRequest
    if (window.XMLHttpRequest)
        return new XMLHttpRequest();
 
    if (window.ActiveXObject)
    {
        var names = [
            "Msxml2.XMLHTTP.6.0",
            "Msxml2.XMLHTTP.3.0",
            "Msxml2.XMLHTTP",
            "Microsoft.XMLHTTP"
        ];
        for(var i in names)
        {
            try{return new ActiveXObject(names[i]);}
            catch(e){}
        }
    }
    window.alert("Votre navigateur est trop vieux pour le site des Petites Annonces.");
    return null; // non supporté
}

function valider() {
    var pseudo = document.getElementById('pseudo').value ;
    var experience = document.getElementById('experience').value ;
    if (pseudo.length>0 && pseudo.length<100 && experience.length>0 && experience.length<60000) {
        var xhr = Xhr() ;
        xhr.onreadystatechange  = function() { 
         if(xhr.readyState  == 4)
            {
                if(xhr.status  == 200)
                {
                    if (xhr.responseText==1) {
                        document.getElementById('resultat').innerHTML = '<p><strong><em> Votre expérience sera ajoutée après modération, Merci !</em></strong></p>' ;
                    }
                    else {
                        document.getElementById('feedback').innerHTML = ' <strong>Erreur !</strong>' ; // xhr.responseText
					}
                }
            }
            else
                document.getElementById('feedback').innerHTML = '</em> Merci de patienter...   </em>' ;
        }; 
        xhr.open("POST","index.php", true);        
        xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
        xhr.send("pseudo="+encodeURIComponent(pseudo)+"&experience="+encodeURIComponent(experience)); 
    }
    else {
        document.getElementById('feedback').innerHTML = "<em>Erreur dans votre saisie...   </em>" ;
    }
}

</script>
