<script type="text/javascript">

$(document).ready(function() {
	$(".fancybox-thumb").fancybox({
		openEffect	: 'fade',
		closeEffect	: 'fade',
		prevEffect	: 'fade',
		nextEffect	: 'fade',
		nextSpeed	: 'slow',
		prevSpeed	: 'slow',
		helpers	: {
			title	: {
				type: 'outside'
			},
			overlay	: {
				opacity : 0.5,
				
			},
			
		}
	});

	$(".vermapa").click(function(e) {
		e.preventDefault();
		$("#contacto iframe").css("opacity","1");
	})
	const servidor = "http://api.openweathermap.org/data/2.5/weather?q=";
	$( "#estados" )
	  .change(function () {
	    var str = "";
	    $( "select option:selected" ).each(function() {
	      	str = servidor + $( this ).text() + ",Mexico&units=metric";
	    });
	    $.ajax({
		type: "POST",
		url: str,
		}).done(function( datos ) {
			//alert(datos.status);
			//var largo = datos.post.attachments.length;
			//alert(largo);
			//$(".minis").html("");
			//for(var i=0; i < largo; i++) {
				//$(".minis").append('<span><a href="#"  class="vista" data-mini="'+i+'"><img src="'+datos.post.attachments[i].url+'"></a></span>');
				
			//}
			$(".rclima").html("<img src='http://openweathermap.org/img/w/"+datos.weather[0].icon+".png'>Temp: "+datos.main.temp+"&deg;<br>"+
				"Pres: "+datos.main.pressure+"<br>"+
				"Hum: "+datos.main.humidity+"<br>"+
				"Viento: "+datos.wind.speed);
			//actual = vars.current_slide;
		});
	    //$( ".rclima" ).text( str );
	  })
  .change();
	//$("#estados").on
	//http://api.openweathermap.org/data/2.5/weather?q=Jalisco,Mexico&dev=1
	  
});
</script>
