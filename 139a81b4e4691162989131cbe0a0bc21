			<script src="http://academiaaeronautica.com/wp-content/themes/academia/js/masonry.pkgd.min.js"></script>
			<script src="http://academiaaeronautica.com/wp-content/themes/academia/js/jquery.isotope.min.js"></script>
<script src="http://academiaaeronautica.com/wp-content/themes/academia/js/script.js"></script>
<script>
$( function() {
  // init Isotope
  var $container = $('#productos-tienda').isotope({
    itemSelector: '.item'
  });

  // store filter for each group
  var filters = {};

  $('.filtros').on( 'click', '.filter-data', function() {
    var $this = $(this);
    // get group key
    var $buttonGroup = $this.parents('.button-group');
    var filterGroup = $buttonGroup.attr('data-filter-group');
    // set filter for group
    filters[ filterGroup ] = $this.attr('data-filter');
    // combine filters
    var filterValue = '';
    for ( var prop in filters ) {
      filterValue += filters[ prop ];
    }
    // set filter for Isotope
    $container.isotope({ filter: filterValue });
  });

  // change is-checked class on buttons
  $('.button-group').each( function( i, buttonGroup ) {
    var $buttonGroup = $( buttonGroup );
    $buttonGroup.on( 'click', 'a', function() {
      $buttonGroup.find('.selected').removeClass('selected');
      $( this ).addClass('selected');
    });
  });
  
});
</script>
<script>
   $(document).ready( function() {
		$(".mas-informacion, .mas-otra").click(function(e) {
			e.preventDefault();
			//alert($(this).data( "id" ));
			var id=$(this).data( "id" );
			$("#"+id).addClass("encima-hover");
			//var id = $(this).attr("href");
			$("#"+id).animate({
					opacity: 1,
				},600,function() {
			})
			// Deshabilitamos el scroll una vez que abren uno de los productos para evitar que se muevan de la sección	
			 $(document).keydown(function(event){
				if(event.keyCode == 32){
					return false;
		
				}
			});
			document.documentElement.style.overflow = 'hidden';
			document.body.scroll = "no";
		});
		$(".cerrar").click(function(e) {
			e.preventDefault();
			//alert($(this).data( "id" ));
			//var id=$(this).data( "id" );
			
			//var id = $(this).attr("href");
			$(".encima-hover").animate({
					opacity: 0,
				},600,function() {
					$(".encima-hover").removeClass("encima-hover");
			})
			// Habilitamos el scroll del mouse en el contenido cuando cierran una papa
			$(document).keydown(function(event){
				if(event.keyCode == 32){
					return true;
		
				}
			});
				
			document.documentElement.style.overflow = 'inherit';
			document.body.scroll = "yes";

		});
		$(".filtros-primero a").click(function(e) {
			//e.preventDefault();
			//alert($(this).data( "id" ));
			//var id=$(this).data( "id" );
			
			//var id = $(this).attr("href");
			$(".productos-inicio").removeClass("ocultar");
			$(".filtros-primero").addClass("ocultar");
			$(".filtros-tienda .filtros").removeClass("ocultar");
			// Habilitamos el scroll del mouse en el contenido cuando cierran una papa

		});
	});
(function(){

  //ipad safari
  if(/iPad/.test(navigator.platform) && /Safari/i.test(navigator.userAgent)){  
    $("body").css({
    	height: "110%",
    	backgroundSize: "auto 145%"
    })
  }
})();
</script>
